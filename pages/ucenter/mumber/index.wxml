          <view class="cu-item">
            <view class="cu-avatar round lg" style="background-image:url(/images/icon/mumber-fill.png);"></view>
            <view class="content flex-sub">
              <view class="text-grey">铂金会员</view>
              <view class="cu-progress round sm striped active">
                <view class="bg-green" style="width: 80%;">80%</view>
              </view>
              <view class="text-grey text-sm text-right">有效期：2024/10/28</view>
