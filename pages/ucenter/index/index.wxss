.UCenter-bg {
  /* background-image: url(https://i.imgur.com/4yf5CWv.png); */
  background-image: url(https://i.imgur.com/0C7sIwM.png);
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

/* 头像 */
.UCenter-bg .avatar {
  border-radius: 50%;
  margin-bottom: 40rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}



page {
  min-height: 100%;
  background-color: #fafafa;
}


/* 会员卡片展示 */
.mumber-container {
  /* height: 220rpx; */
}

.mumber-wrap {
  margin: 40rpx 40rpx 0;
  padding: 30rpx 40rpx 40rpx 40rpx;
  background-color: white;
  border-radius: 40rpx;
  /* transform: translateY(-150rpx); */
}

.card-row-1 {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.card-row-1 .fl {
  width: 80%;
  font-size: 40rpx;
  font-weight: 600;
}

.card-row-1 .fr {
  width: 20%;
  text-align: right;
}

.card-row-1 .fr .mumber-qr-code {
  height: 40rpx;
  width: 40rpx;
}

.card-row-2 {
  margin-top: 40rpx;
}

.card-row-2 .exp-text {
  font-size: 46rpx;
  font-weight: 500;
}

.card-row-3 {
  margin-top: 10rpx;
}

.card-row-3 .exp-extra {
  font-size: 26rpx;
  color: #999;
}

/* 常用功能 */
.top-title {
  width: 200rpx;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 40rpx;
  font-weight: 600;
}

.top-title .left-line {
  width: 10rpx;
  height: 30rpx;
  margin-right: 20rpx;
  /* background: #12addb; */
  border-radius: 20rpx;
}

/* 商标 or 版权 */
.company {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 10rpx 0 50rpx 0;
}

.company .c-wrap {
    width: 30%;
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    display: flex;
    justify-content: center;
}

.company .c-wrap .line {
    height: 40rpx;
    width: 100%;
    border-bottom: 2rpx solid #999;
    position: absolute;
    top: 0;
}

.company .c-wrap .text {
    background: #fafafa;
    color: #999;
    font-size: 30rpx;
    text-align: center;
    width: 80%;
    z-index: 2;
}

.company .tip {
    font-size: 24rpx;
    color: #b3b3b3;
}
