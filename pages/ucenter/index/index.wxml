<view class="container">
    <view class="userinfo">
        <view class='head-wrap' wx:if="{{hasUserInfo == false}}" bindtap='goAuth'>
            <view class="no-login-avatar">
                <view class='no-avatar'>
                    <image class='avatar' src="/images/icon/default_avatar_big.png"></image>
                </view>
                <view class='btn-login'>点我登录</view>
            </view>
        </view>

        <!-- 头像 + 微信名 + 右边箭头 -->
        <view class='head-wrap' wx:else bindtap='goProfile'>
            <view class="head-l">
                <view class='l'>
                    <image class='avatar' src="{{root + userInfo.avatar}}"></image>
                </view>
                <view class='r'>
                    <view class='t'>
                        <view class='name'>{{userInfo.nickname}}</view>
                        <view class='phone'>手机号（暂未获取）</view>
                    </view>
                </view>
            </view>
            <view class="head-r">
                <view class="arrow"></view>
            </view>
        </view>

        <!-- 头像下面的一行按钮 -->
        <view class='head-info-container'>
            <view class='info-wrap' data-index='1' bindtap='toOrderListTap'>
                <view>
                  <text class="info-number">{{ '10.00' }}</text>
                </view>
                <text class='order-txt'>余额</text>
            </view>
            <view class='info-wrap' data-index='2' bindtap='toOrderListTap'>
                <view>
                  <text class="info-number">{{ '798.00' }}</text>
                </view>
                <text class='order-txt'>积分</text>
            </view>
            <view class='info-wrap' data-index='3' bindtap='toOrderListTap'>
                <view>
                  <text class="info-number">{{ '8' }}</text>
                </view>
                <text class='order-txt'>优惠券</text>
            </view>
        </view>

        <!-- 占位符，不可删除 -->
        <view class="head-bottom-block"></view>
    </view>

    <view class="mumber-container">
      <view class="mumber-wrap">
        <view>
          <view class="card-row-1">
            <view class='fl' bindtap='toMumberCenterPage'>
              <text>会员中心(进入)</text>
            </view>
            <view class='fr'>
              <image class='mumber-qr-code' src="/images/icon/qr-code.png"></image>
            </view></view>
        </view>
        <view>
          <view class="card-row-2">
            <text class="exp-text">40</text>
            成长值
          </view>
          <progress percent="6.5" show-info stroke-width="10" color="#10AEFF"/>
        </view>
        <view>
          <view class="card-row-3">
            <view class="exp-extra">再获得 9960 成长值成为 VIP 2</view>
          </view>
        </view>
      </view>
    </view>

    <!-- <ad unit-id="adunit-89ae0a0b6860dc9f" ad-type="grid" grid-opacity="0.8" grid-count="5" ad-theme="white"></ad> -->

    <view class="order-container">
        <view class='header' data-index='0' bindtap='toOrderListTap'>
            <view class='top-title'>
                <view class='left-line'></view>
                <view class='text'>订单中心</view>
            </view>
            <view class='see-more'>
                <view class="text">查看全部订单</view>
                <view class="arrow"></view>
            </view>
        </view>
        <!-- 全部订单下方的按钮 -->
        <view class='btn-container'>
            <view class='icon-wrap' data-index='1' bindtap='toOrderListTap'>
                <view class='order-icon-wrap'>
                    <image class='order-icon' src='/images/icon/icon-pay-r.png'>
                    </image>
                    <view wx:if="{{status.toPay > 0 }}" class='red-point'>{{status.toPay}}</view>
                </view>
                <text class='order-txt'>待付款</text>
            </view>
            <view class='icon-wrap' data-index='2' bindtap='toOrderListTap'>
                <view class='order-icon-wrap'>
                    <image class='order-icon' src='/images/icon/icon-delivery-r.png'>
                    </image>
                    <view wx:if="{{status.toDelivery > 0 }}" class='red-point'>{{status.toDelivery}}</view>
                </view>
                <text class='order-txt'>待发货</text>
            </view>
            <view class='icon-wrap' data-index='3' bindtap='toOrderListTap'>
                <view class='order-icon-wrap'>
                    <image class='order-icon' src='/images/icon/icon-onroad-r.png'>
                    </image>
                    <view wx:if="{{status.toReceive > 0 }}" class='red-point'>{{status.toReceive}}</view>
                </view>
                <text class='order-txt'>待收货</text>
            </view>
        </view>
    </view>

    <view class="li-wrap">
        <view class="list" bindtap="toCartCart">
            <view class="list-l">
                <view class="icon">
                    <image class="img" src="/images/icon/cart-empty.png"></image>
                </view>
                <view class="text">购物车</view>
            </view>
            <view class="arrow"></view>
        </view>
        <view class="list" bindtap="toAddressList">
            <view class="list-l">
                <view class="icon">
                    <image class="img" src="/images/icon/icon-address-r.png"></image>
                </view>
                <view class="text">地址管理</view>
            </view>
            <view class="arrow"></view>
        </view>
    </view>

    <view class="li-wrap">
        <view class="list" bindtap="toFootprint">
            <view class="list-l">
                <view class="icon">
                    <image class="img" src="/images/icon/icon-footprint-r.png"></image>
                </view>
                <view class="text">我的足迹</view>
            </view>
            <view class="arrow"></view>
        </view>
        <button class="contact-btn" session-from='{"nickName":"{{userInfo.nickname}}","avatarUrl":"{{userInfo.avatar}}"}' open-type="contact">
            <view class="list-l">
                <view class="icon">
                    <image class="img" src="/images/icon/icon-service-r.png"></image>
                </view>
                <view class="text">联系客服</view>
            </view>
            <view class="arrow"></view>
        </button>
        <view class="list" bindtap="toAbout">
            <view class="list-l">
                <view class="icon">
                    <image class="img" src="/images/icon/icon-about-r.png"></image>
                </view>
                <view class="text">关于我们</view>
            </view>
            <view class="arrow"></view>
        </view>
    </view>

    <view class="company">
        <view class="c-wrap" bindtap="getOrderInfo">
            <view class="text">海风小店</view>
            <view class="line"></view>
        </view>
        <view class="tip">开源微信小程序商城</view>
    </view>
</view>